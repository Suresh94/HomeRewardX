<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kryptoblocks.homerewardx">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesignDemo">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Product_list"
            android:label="Products">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptoblocks.homerewardx.MainActivity" />

        </activity>

        <activity android:name=".Product_details"
            android:windowSoftInputMode="stateHidden"
            android:label="Desccription">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptoblocks.homerewardx.Product_list" />
        </activity>

        <activity android:name=".User_sign_up">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptoblocks.homerewardx.Login" />
        </activity>

        <activity android:name=".AboutUs">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptoblocks.homerewardx.MainActivity" />
        </activity>

        <activity android:name=".Term_condition">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptoblocks.homerewardx.MainActivity" />
        </activity>
        <activity android:name=".ContactUs">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptoblocks.homerewardx.MainActivity" />
        </activity>
        <activity android:name=".Cart">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptoblocks.homerewardx.Product_details" />
        </activity>

        <activity android:name=".Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptoblocks.homerewardx.Cart" />
        </activity>


    </application>

</manifest>