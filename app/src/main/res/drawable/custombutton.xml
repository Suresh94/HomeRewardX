<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/priamry"
                android:endColor="@color/priamry"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#736F6E" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/priamry"
                android:startColor="@color/priamry"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#736F6E" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#d20000"
                android:startColor="#d20000"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#736F6E" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
</selector>