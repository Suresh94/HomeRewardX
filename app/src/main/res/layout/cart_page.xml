<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFF"
            android:theme="@style/GalaxyZooThemeToolbarDarkOverflow"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rewards"
                android:textSize="30dp"
                android:textColor="@color/red_app"/>

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:background="#00b8a9"
            android:layout_width="match_parent"
            android:layout_height="5dp" />

    </android.support.design.widget.AppBarLayout>







    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestscrollPd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward points"
                android:textColor="#585858"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout android:id="@+id/tableLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shrinkColumns="*"
                        android:stretchColumns="*" >



                        <TableRow
                            android:padding="5dp"
                            android:background="@color/red_app"
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="#FFF"
                                android:id="@+id/TextView21"
                                android:text="PRODUCT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>

                            <TextView
                                android:textColor="#FFF"
                                android:id="@+id/TextView24"
                                android:gravity="center"
                                android:text="DESCRIPTION"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>

                            <TextView
                                android:textColor="#FFF"
                                android:id="@+id/TextView22"
                                android:gravity="center"
                                android:text="QUANTITY"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>

                            <TextView
                                android:textColor="#FFF"
                                android:id="@+id/TextView23"
                                android:gravity="center"
                                android:text="PRICE"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>


                        </TableRow>

                        <TableRow
                            android:background="@drawable/btn_back"
                            android:padding="8dp"
                            android:id="@+id/tableRow3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp" >

                            <ImageView
                                android:id="@+id/textView31"
                                android:text="Day High"
                                android:src="@drawable/product"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </ImageView>

                            <TextView
                                android:id="@+id/textView32"
                                android:gravity="center_horizontal"
                                android:text="Gift"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>

                            <TextView
                                android:id="@+id/textView33"
                                android:gravity="center_horizontal"
                                android:text="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>

                            <TextView
                                android:id="@+id/textView34"
                                android:gravity="center_horizontal"
                                android:text="700"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>

                        </TableRow>
                    </TableLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/cartContinueShopping"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:background="@color/priamry"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:text="Continue Shopping"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REWARD SUMMARY"
                android:textColor="#585858"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/loginShip"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROMTION CODE"/>





                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter your coupon code"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"/>

                        <EditText
                            android:background="@drawable/btn_back"
                            android:layout_width="120dp"
                            android:layout_height="28dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>

                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="200dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:textColor="#FFF"
                        android:text="APPLY code"
                        android:background="@color/red_app"/>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sub Total"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="700.00 INR"
                            android:layout_marginLeft="60dp"
                            android:textColor="#000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coupon Discount"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs. 0"
                            android:layout_marginLeft="15dp"
                            android:textColor="#000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toatal"
                            android:layout_marginRight="10dp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="700.00 INR"
                            android:layout_marginLeft="82dp"
                            android:textColor="#000"/>

                    </LinearLayout>
                </LinearLayout>

                </android.support.v7.widget.CardView>




            <Button
                android:layout_marginBottom="20dp"
                android:id="@+id/cartCouponProceed"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:text="PROCEED TO CHECKOUT"
                android:textColor="#FFF"
                android:background="#d50000"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>




        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>



</android.support.design.widget.CoordinatorLayout>